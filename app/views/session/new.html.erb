<% provide(:title, "Log in") %>
<h1><%= t('language.login') %></h1>
<div class="row" id="login_container">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label t('language.email') %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.label t('language.password') %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t('language.remember_me_pc') %></span>
      <% end %>
      <%= f.submit t('language.login'), class: "btn btn-primary" %>
    <% end %>
       <%= button_to "GOOGLE+", "/auth/google_oauth2", class: "btn btn-primary " ,style: "margin-top: 5px" %>
    <p><%= t('language.new_user') + "?" %> <%= link_to t('language.signup_now') + "!", signup_path, style: "color: red; font-weight: bold" %></p>
  </div>
</div>

<style>
  #login_container {
    display: flex;
    justify-content: center;
    color: black;
  }

  .checkbox {
    display: flex;
    align-items: center;
  }

  label {
    font-weight: bold;
  }
</style>